<%- include header %>
<div class="container">
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4">
      <div class="row">
        <div class="primary-box form-box">
          <div class="primary-box-bd">
            <form method="post" class="loginForm">
              <div class="form-group">
                <h3 class="text-center form-title">Log in to your account</h3>
              </div>
              <div class="form-group">
                <label class="sr-only" for="name">Amount (in dollars)</label>
                <div class="input-group">
                  <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                  <input type="text" class="form-control" name="name" placeholder="请输入用户名">
                </div>
              </div>
              <div class="form-group">
                <label class="sr-only" for="name">Amount (in dollars)</label>
                <div class="input-group">
                  <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                  <input type="password" class="form-control" name="password" placeholder="请输入密码">
                </div>
              </div>
              <div class="form-group text-right">
                <button type="submit" class="btn btn-lg btn-block btn-success">登录</button>
              </div>
            </form>
          </div>
          <div class="primary-box-ft">
            <div class="form-box-ft text-center">
              还没有账号？联系管理员 <a href="###">704041637@qq.com</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
    $(function () {
        $('.loginForm').bootstrapValidator({
            message: 'This value is not valid',
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                name: {
                    message: '用户名验证失败',
                    validators: {
                        notEmpty: {
                            message: '用户名不能为空'
                        }
                    }
                },
                password: {
                    validators: {
                        notEmpty: {
                            message: '邮箱地址不能为空'
                        }
                    }
                }
            }
        });
    });

</script>

<%- include footer %>
