<%- include header %>
<div class="container">
  <div class="row">
    <div class="primary-box">
      <div class="primary-box-bd">
        <form method="post" class="form">
          <div class="form-group">
            <label>作品标题：</label>
            <input type="text" class="form-control" name="title" value="<%= post.title %>" placeholder="请输入作品标题"/>
          </div>
          <div class="form-group">
            <label>作品介绍：</label>
            <input type="text" class="form-control" name="titleInfo" value="<%= post.titleInfo %>" placeholder="请输入作品介绍"/><br/>
          </div>
          <div class="form-group">
            <label>标签：</label>
            <input type="text" class="form-control" name="tags" value="<%= post.tags %>" placeholder="请输入作品标签"/><br/>
          </div>
          <div class="form-group">
            <label>正文：</label>
            <textarea name="post" class="form-control" rows="20"><%= post.post %></textarea>
          </div>
          <div class="form-group text-right">
            <button type="submit" class="btn btn-default">保存修改</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include footer %>